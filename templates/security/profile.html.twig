{% extends 'base.html.twig' %}

{% block title %}My profile{% endblock %}

{% block body %}
    <section  class="text-center">
        <h1 class="title">Profile</h1>
        <div class="container">
        Cette page vous permettra d'afficher les informations de votre profil et de les modifier
            <div class="container ">
                <div class="row text-center my-2">
                    <div class="col-md-6 offset-md-3">
                        {{ form_start(form) }}
                            <div class="form-group row align-items-center">
                                <label for="title" class="col-sm-2 col-form-label my-2">Username:</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.username)}}
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label for="content" class="col-sm-2 col-form-label my-2">Real Name:</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.realname) }}
                                </div>
                            </div>
                            <div class="form-group row align-items-center align-items-center">
                                {% if user.username == 'Spot' %}
                                    <label for="content" class="col-sm-2 col-form-label my-2">Villain Name: </label>
                                {% else %}
                                    <label for="content" class="col-sm-2 col-form-label my-2">Hero Name:</label>
                                {% endif %}
                                <div class="col-sm-10">
                                    {{ form_widget(form.heroname) }}
                                </div>
                            </div>
                            <div class="form-group row align-items-center ">
                                <label for="content" class="col-sm-2 col-form-label my-2">Avatar :</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.avatar) }}
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label for="movies" class="col-sm-2 col-form-label my-2">Movies: </label>
                                <div class="col-sm-10">
                                    <textarea class="form-control my-2" id="movies" disabled>{% for movie in movies %}{{movie.moviename}} -- {{movie.yearReleased}}{% endfor %}</textarea>
                                </div>
                            </div>
                            <div class="form-group row align-items-center">
                                <label for="quotes" class="col-sm-2 col-form-label my-2">Quotes: </label>
                                <div class="col-sm-10">
                                    <textarea class="form-control my-2" id="quotes" disabled>{% for quote in quotes %}{{quote.quote}}{% endfor %}</textarea>
                                </div>
                            </div>

                            <div class="row justify-content-end mt-3">
                                <button type="submit" class="btn btn-danger">Submit</button>
                            </div>
                            <div class="row justify-content-end mt-5 border-top border-black">
                                <p class="fs-2 mt-3"><u>If you want to quit the Spider Society click down below, but be careful this action can not be undone</u></p>
                                <a class="btn btn-danger" href="{{path('app_delete', {'id':user.id})}}" >Delete Profile</a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                    <div class="col-md-6 offset-md-3">
                    {# {{ form_start(quotesForm) }}
                        <div class="form-group row">
                            <label for="title" class="col-sm-2 col-form-label my-2">Insert or modify quotes:</label>
                            <div class="col-sm-10">
                                {{ form_widget(quotesForm.quote)}}
                            </div>
                        </div>

                    {{ form_end(quotesForm) }} #}
                    
                        
                    </div>
                </div>
            </div>        
        </div>
    </section>
{% endblock %}
